/* In your Liquid file, e.g., styles.css.liquid */

body {
    font-family: 'Great Vibes', cursive;
    background-color: #52307F; /* Update with your desired color */
    color: #ff9702; /* Update with your desired color */
    text-align: center;
    margin: 0;
    padding: 0;
}

#header {
    background-color: #4daf50; /* Update with your desired color */
    color: #ff9702; /* Update with your desired color */
    padding: 20px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    position: fixed;
    width: 100%;
    z-index: 1;
}

h1 {
    font-size: 36px;
}

p {
    font-size: 24px;
}

#slogan {
    font-size: 28px;
    margin: 20px;
}

#candleImage {
    width: 300px;
    animation: float 2s ease-in-out infinite;
}

#laughButton {
    background-color: #ff9702;
    color: #4daf50;
    font-size: 24px;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
}

#laughButton:hover {
    background-color: #4daf50;
    color: #ff9702;
}

@keyframes float {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

/* Navigation menu styles */
.navbar {
    display: flex;
    justify-content: center;
    background-color: #4daf50; /* Update with your desired color */
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1;
}

.navbar a {
    text-decoration: none;
    color: #ff9702; /* Update with your desired color */
    padding: 20px;
    transition: color 0.3s;
}

.navbar a:hover {
    color: #ff4502; /* Update with your desired color */
}
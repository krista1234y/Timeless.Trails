<!-- layout.liquid -->

<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
    <meta charset="UTF-8">
    <title>{{ page_title }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Great Vibes', cursive;
            background-color: #52307;
            color: #ff9702;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        #header {
            background-image: url('{{ 'TimelessTrailsHeader.gif' | asset_url }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ff9702;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            position: fixed;
            width: 100%;
            z-index: 1000; /* Set a high z-index to ensure it's above other elements */
            top: 0;
            transition: background-color 0.3s, color 0.3s;
        }

        #header h1 {
            font-size: 36px;
            margin: 0;
        }

        /* Add more styles as needed */

        /* The rest of your existing styles can be placed here */

        #main-content {
            margin-top: 80px; /* Adjust the margin to accommodate the sticky header */
        }

        /* Add your custom styles for the header */
        #header.sticky {
            background-color: #4daf50;
            color: #ff9702;
        }
    </style>
</head>
<body>
    <div id="header">
        <h1>Timeless Trails</h1>
    </div>

    <div id="main-content">
        <!-- Content from other templates will be inserted here -->
        {{ content_for_layout }}
    </div>

    <div id="footer">
        <!-- Include the footer section -->
        {% include 'footer' %}
    </div>

    <script>
        // Add any JavaScript logic here
        window.onscroll = function() {
            addStickyClass();
        };

        function addStickyClass() {
            var header = document.getElementById("header");

            if (window.pageYOffset > 0) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }
    </script>
</body>
</html>
